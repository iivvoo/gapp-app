<div class="container-fluid">
    <div class="row">
        <div class="col-md-4">
            <button {{action 'createGoal'}}>Create</button> {{input type="text" value=query placeholder="Filter Posts" autofocus="autofocus"}}
            <table class='table'>
                <thead>
                    <tr><th>Recent Goals</th></tr>
                </thead>
                <tbody>
                {{#each arrangedContent as |goal|}}
                <tr>
                    <td>
                        {{#link-to 'goals.goal' goal.id}}
                            {{goal.title}}
                        {{/link-to}}
                    </td>
                </tr>
                {{/each}}
                </tbody>
            </table>
        </div>

        <div class="col-md-8">
            {{outlet}}
        </div>
    </div>
</div>
