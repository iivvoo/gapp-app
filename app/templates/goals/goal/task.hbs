{{# if isEditing }}
    <form>
        <div class="form-group">
            {{input type="text" class="form-control input-lg" id="taskTitle" value=model.title placeholder="Enter title"}}
        </div>
        <div class="form-group">
            <label for="taskBody">Details</label>
            {{textarea class="form-control" id="taskBody" value=model.body}}
        </div>
        <div class="checkbox">
            <label>
                {{input type="checkbox" checked=model.isCompleted }} Completed
            </label>
        </div>
        <div class="form-group">
            <label for="taskDeadline">Deadline</label>
            {{bs-datetimepicker date=model.date format='YYYY-MM-DD hh:mm'}}
        </div>
    </form>
    <div class="row">
        <div class="col-md-12">
            <button class="btn btn-success pull-right" {{action "saveTask"}}>Save</button>
            <button class="btn btn-default pull-right" {{action "cancelTask"}}>Cancel</button>
        </div>
    </div>
{{else}}
    <h2>task {{model.title}}</h2>
    <div class="row">
        <div class="col-md-12">
            {{model.body}}
        </div>
    </div>
    <div class="row">
        <div class="col-md-4">
            <b>Deadline</b>
        </div>
        <div class="col-md-8">
            {{date_or_notset}}
        </div>
    </div>
    <div class="row">
        <div class="col-md-4">
            <b>Completed</b>
        </div>
        <div class="col-md-8">
            {{#if model.isCompleted }}
            Yes
            {{else}}
            No
            {{/if}}
        </div>
    </div>

    <div class="row">
        <div class="col-md-12">
            <button class="btn btn-default pull-right" {{action "editTask"}}>Edit</button>
            <button class="btn btn-danger pull-right" {{action "deleteTask"}}>Delete</button>
        </div>
    </div>
{{/if}}
