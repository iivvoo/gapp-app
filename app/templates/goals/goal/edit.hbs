<div class="row">
    <div class="col-md-12">
        <h2>goal {{model.title}}</h2>
        <div class="panel panel-default">
            <div class="panel-body">
                <form>
                    <div class="form-group">
                      <label for="goalTitle">Title</label>
                      {{input type="text" class="form-control" id="goalTitle" placeholder="Enter title" value=work.title}}
                    </div>
                    <div class="form-group">
                      <label for="goalDescription">Details</label>
                      {{textarea class="form-control" id="goalDescription" value=work.body}}
                    </div>
                    <div class="checkbox">
                        <label>
                            {{input type="checkbox" checked=work.completed }} Goal is completed
                        </label>
                    </div>
                <button class="btn btn-danger pull-left" {{action "deleteGoal"}}>Delete</button>
                <button class="btn btn-default pull-right" {{action "cancelEdit"}}>Cancel</button>
                <button class="btn btn-success pull-right" {{action "saveGoal"}}>Save</button>
                </form>
            </div>
        </div>
    </div>
</div>
