<div class="row">
    <div class="col-md-6">
        <div class="list-group">
            <div class="list-group-item">
                <form {{action "createTask" on="submit" }}>
                  {{input type="text" class="new-task" placeholder=newTaskPlaceholder value=newTask}}
                  <button type="submit" class="btn btn-primary btn-sm new-artist-button"
                          disabled={{disabled}}>Add</button>
                </form>
                <label>
                {{input type="checkbox" checked=showCompleted }} show completed items
                </label>
            </div>
        </div>
        {{#each sortedTasks as |task|}}
            {{#link-to 'goals.goal.tasks.task' task.id class="list-group-item selection-link"}}
                {{ task-listitem task=task }}
            {{/link-to}}
        {{/each}}
    </div>
    <div class="col-md-6">
        {{ outlet }}
    </div>
</div>
