{{#m3r-modal title="Task"}}
    {{#m3r-modal-body}}
    {{# if edit}}
    <div class="row">
      EDit
    </div>
    {{else}}
    <div class="row">
        <div class="col-md-12">
            {{model.body}}
        </div>
    </div>
    <div class="row">
        <div class="col-md-4">
            <b>Priority</b>
        </div>
        <div class="col-md-8">
            {{show-priority model.priority}}
        </div>
    </div>
    <div class="row">
        <div class="col-md-4">
            <b>Deadline</b>
        </div>
        <div class="col-md-8">
            {{date_or_notset}}
        </div>
    </div>
    <div class="row">
        <div class="col-md-4">
            <b>Put on plate?</b>
        </div>
        <div class="col-md-8">
            {{#if model.workon }}
            Yes
            {{else}}
            No
            {{/if}}
        </div>
    </div>
    <div class="row">
        <div class="col-md-4">
            <b>Completed</b>
        </div>
        <div class="col-md-8">
            {{#if model.isCompleted }}
            Yes
            {{else}}
            No
            {{/if}}
        </div>
    </div>
    {{/if}}
    {{/m3r-modal-body}}

    {{#m3r-modal-buttons}}
        <button type="button" class="btn btn-default" {{action "closeModal"}}>Close</button>
        {{#if edit}}
        <button type="button" class="btn btn-primary" {{action 'edit'}}>Save</button>
        {{else}}
        <button type="button" class="btn btn-primary" {{action 'edit'}}>Edit</button>
        {{/if}}
    {{/m3r-modal-buttons}}

{{/m3r-modal}}

{{yield}}
