<div class="checkbox">
    <label>
        {{input type="checkbox" action=frop checked=task.isCompleted}} {{task.title}}
        {{#if date}}
        <br>
        <small>{{date}}</small>
        {{/if}}
        {{do-highlight task.title}}
        {{#if priority}}
            <span class="label label-{{priority.cssclass}}">{{priority.label}}</span>
        {{/if}}

    </label>
    <span class="pointer glyphicon glyphicon-chevron-right"></span>
</div>
